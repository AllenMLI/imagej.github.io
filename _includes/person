{%- if include.id -%}
  {%- assign label = include.id -%}
  {%- assign url = "/users/" | append: include.id -%}
  {%- if include.name -%}
    {%- assign label = include.name -%}
  {%- else -%}
    {%- for p in site.pages -%}
      {%- if p.url == url -%}
        {%- assign label = p.name -%}
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
  <a class="person" href="{{url}}">{{label}}</a>
{%- else -%}
  {{include.name}}
{%- endif -%}
